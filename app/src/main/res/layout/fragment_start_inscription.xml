<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_start_inscription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.gob.jalisco.edu.consultaescolar.fragments.StartInscription"
    android:background="@color/background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selecciona el nivel para realizar la preinscripciÃ³n"
                        style="@style/Base.TextAppearance.AppCompat.Title"
                        android:textSize="30dp"
                        android:layout_marginTop="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/niveles"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/title"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:background="@drawable/spinner_background"
                            android:layout_marginBottom="30dp"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.1"
                            android:tint="@color/colorAccent"
                            android:layout_marginLeft="-40dp"
                            android:src="@drawable/ic_arrow_drop_down"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</RelativeLayout>
